fn test_divisibility_by_3_4(number: i32) -> i32 {
    if number % 3 == 0 && number % 4 == 0 {
        0
    } else if number % 3 == 0 {
        1
    } else if number % 4 == 0 {
        2
    } else {
        -1
    }
}

fn main() {
    let number = 12;
    let result = test_divisibility_by_3_4(number);
    println!("{}", result);
}
